<h1>
  Director #<%= @the_director.id %> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @the_director.id %>" class="btn btn-block btn-outline-secondary">
  Delete director
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%= @the_director.image %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.updated_at) %> ago
  </dd>
</dl>

<h1>Filmography</h1>

<table border="1">
<% @list_of_movies.each do |entry| %>
  <tr>
    <td> <%= entry.id %> </td>
      <td> 
        <img src="http://robohash.org/<%=entry.title%>">
      </td>
    <td> <%= entry.title %> </td>
    <td> <%= entry.year %> </td>
    <td> 
    <% dtemp = Director.where({ :id => entry.director_id}).at(0) %>
    <%= dtemp.name %> </td>
    <td> 
      <a href="/movies/<%=entry.id%>">
      Show details
      </a>
    </td>
  </tr>
<% end %>
</table>
